<div class="error-container">
  <div class="error-title">
    {{ section.settings.title }}
  </div>
  <div class="error-description">
    <p>
      {{ section.settings.description | capitalize }}
    </p>
  </div>
  <div>
    {% if section.settings.back_to_home_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.back_to_home_url %}
    {% endif %}
    <a href="{{ shop_url }}" class="back-button">
      {{ section.settings.back_to_home_lable }}
    </a>
  </div>
</div>


{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex flex-col justify-center items-center w-full text-center gap-2 text-3xl text-rose-800 py-2 h-screen",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "404 Heading Title",
            },
            {
                "type": "text",
                "id": "description",
                "default": "Sorry, the page you are looking for does not exist.",
                "label": "404 Description",
            },
            {
                "type": "text",
                "id": "back_to_home_lable",
                "default": "Back to Home",
                "label": "Back to Home Text",
            },
            {
                "type": "text",
                "id": "back_to_home_url",
                "default": "/",
                "label": "Back to Home URL",
            }
        ],

    }
{% endschema %}