{% paginate blog.articles by 3 %}
  {% for article in blog.articles %}
    <div>
      {% if article.image %}
        <img src="{{ article.image | image_url }}" alt="{{ article.image.alt }}" width="100%" height="100%">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'w-20' }}
      {% endif %}
      <h1>{{ article.title }}</h1>

      {% if article.excerpt.size > 0 %}
        <p>{{ article.excerpt }}</p>
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
      {% endif %}
    </div>
  {% endfor %}
{% endpaginate %}
