<div class="flex flex-col items-center my-8">
  <h1 class="text-3xl font-medium my-8 md:my-16">{{ page.title }}</h1>
  <div class="max-w-6xl mx-auto px-4">{{ page.content }}</div>
</div>

{% schema %}
{
  "name": "Page Template",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Enter your page title here"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Page Content",
      "default": "<p>Enter your page content here.</p>"
    }
  ]
}
{% endschema %}
